<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.BottomPlayerFragment">


    <ProgressBar
        android:id="@+id/progress_bar_horizontal"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:indeterminate="false"
        android:layout_marginBottom="-5dp"
        android:layout_marginTop="-5dp"
        android:progressTint="@color/teal_200" />


    <RelativeLayout
        android:id="@+id/card_bottom_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <ImageView
            android:id="@+id/download_bottom"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_download_icon" />

<!--        <ImageView-->
<!--            android:id="@+id/close_bottom"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:src="@drawable/close_icon" />-->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bottom_album_art"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_color="@color/mdtp_light_gray"
            app:civ_border_width="2dp"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            android:layout_marginTop="19dp"
            android:scaleType="centerCrop"
            android:src="@drawable/music_img" />


        <ImageView
            android:id="@+id/skip_prev_bottom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/play_pause_button_miniPlayer"
            android:src="@drawable/skip_previous" />

        <ImageView
            android:id="@+id/skip_next_bottom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/skip_next" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/play_pause_button_miniPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/skip_next_bottom"
            android:src="@drawable/pause_icon"
            app:fabSize="mini" />

        <TextView
            android:id="@+id/song_name_miniPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:layout_toStartOf="@id/skip_prev_bottom"
            android:layout_toEndOf="@id/bottom_album_art"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Song Name"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/artist_name_miniPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/song_name_miniPlayer"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/skip_prev_bottom"
            android:layout_toEndOf="@id/bottom_album_art"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Artist Name"
            android:textColor="#fff"
            android:textSize="15sp" />


    </RelativeLayout>

</LinearLayout>